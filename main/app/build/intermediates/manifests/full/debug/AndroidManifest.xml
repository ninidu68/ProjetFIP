<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bricola.app_test" >

    <uses-sdk android:minSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <uses-permission
            android:name="android.permission.READ_CONTACTS"
            android:protectionLevel="dangerous" />

        <activity
            android:name="com.example.bricola.app_test.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bricola.app_test.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.bricola.app_test.AddGroupActivity"
            android:label="@string/title_activity_add_group"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.bricola.app_test.GroupActivity"
            android:label="@string/title_activity_group"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.bricola.app_test.AddNewMemberInGroupActivity"
            android:label="@string/title_activity_add_new_member_in_group"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.bricola.app_test.DeleteMemberInGroupActivity"
            android:label="@string/title_activity_delete_member_in_group"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.bricola.app_test.AddNewTransactionActivity"
            android:label="@string/title_activity_add_new_transaction"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.bricola.app_test.DeleteTransactionActivity"
            android:label="@string/title_activity_delete_transaction"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.bricola.app_test.BalanceAccountActivity"
            android:label="@string/title_activity_balance_account"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>